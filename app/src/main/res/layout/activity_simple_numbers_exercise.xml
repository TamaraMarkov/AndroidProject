<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".SimpleNumbersExerciseActivity">

    <include layout="@layout/activity_timer_layout"
        android:id="@+id/timerLayout"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textExersiceN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:textSize="34sp"
        android:textStyle="bold" />
    <include layout="@layout/activity_result_layout"
        android:id="@+id/resultLayout"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/exerciseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <EditText
        android:id="@+id/answerNumberID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="34dp" />

    <Button
        android:id="@+id/answerButtonIDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Answer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/finishButtonIDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Finish" />

    <Button
        android:id="@+id/drawButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="DRAW" />
        <Button
            android:id="@+id/learnButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="LEARN" />


        <ProgressBar
        android:id="@+id/progressBarN"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>